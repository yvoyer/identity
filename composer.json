{
    "name": "star/identity",
    "description": "Library of classes that encapsulates identity concepts.",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Yannick Voyer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Star\\Component\\Identity\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\Component\\Identity\\": "tests"
        }
    },
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "infection/infection": "^0.26.15",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "build": "bin/phpunit && bin/phpstan && bin/phpcs"
    }
}
